{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-header"><h3>Популярные криптовалюты</h3></div>

                        {% if app.user != null %}

                            <table class="table">
                                <tr><th>Криптовалюта</th><th>Цена</th></tr>
                                {% for key, item in cryptocurrencies %}
                                    <tr> <td>{{ key }}</td> <td>{{ item }}</td> </tr>
                                {% endfor %}
                            </table>

                        {% endif %}

                    </div>
                </div>

                {% if app.user == null %}
                    <a href ="{{ path('app_login') }}" class="btn btn-info">
                        Введите логин для доступа к списку криптовалют
                    </a>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
